<h1>Eat-Da-Burger!</h1>

<h2>All The Burgers You Can Devoured!</h2>

<ul>
  {{#each burgers}} <!-- edit -->
    {{#unless this.devoured}} <!-- edit -->
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST"> <!-- edit -->
          <input type="hidden" name="devoured" value="true"> <!-- edit -->
          <button type="submit">DEVOURED TIME!</button> <!-- edit -->
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2> <!-- edit -->

<ul>
  {{#each burgers}} <!-- edit -->
    {{#if this.devoured}} <!-- edit -->
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST"> <!-- edit -->
          <input type="hidden" name="devoured" value="false"> <!-- edit -->
          <button type="submit">PUKE!</button> <!-- edit -->
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add A Burger</h2> <!-- edit -->
<form class="create-update-form" action="burgers/create" method="POST"> <!-- edit -->

  <div class="form-group">
    <label for="bu">Burger Name:</label> <!-- edit -->
    <input type="text" id="bu" name="name">  <!-- edit -->
  </div>

  <div class="form-group">
    <label for="devo">Devour?</label><br> <!-- edit -->
    <input type="radio" name="devoured" value="1" checked> Devour!<br> <!-- edit -->
    <input type="radio" name="devoured" value="0"> Puke  <!-- edit -->
  </div>

  <button type="submit">Add Burger</button>  <!-- edit -->
</form>
